<view class="container"> 
 
 <view class="login-icon"> 
 </view> 
 <view class="login-from"> 

   <!--账号-->
   <view class="inputView">  
     <label class="loginLab">用户名</label> 
     <input class="inputText" placeholder="请输入用户名" bindinput="phoneInput" /> 
   </view> 
   <view class="line"></view> 
   <!--密码-->
   <view class="inputView"> 
     <label class="loginLab">密码</label> 
     <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /> 
   </view> 


    <!--注册-->
   <view class="registerBtnView"> 
     <button class="registerBtn" type="primary" size="{{primarySize}}" 
         loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="registerClick">注册并登录</button> 
   </view> 

 </view> 

</view>

<view class = 'success' wx:if="{{success}}">
 <web-view src="{{text}}"></web-view>
</view>


 
